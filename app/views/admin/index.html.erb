<h1>Shelters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Foster Program</th>
      <th>Rank</th>
      <th>Pets</th>
    </tr>
  </thead>
  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= shelter.name %></td>
        <td><%= shelter.city %></td>
        <td><%= shelter.foster_program ? 'Yes' : 'No' %></td>
        <td><%= shelter.rank %></td>
        <td><%= link_to 'Pets', '/pets' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <h2>Shelters with Pending Applications</h2>
  <% Shelter.all do |shelter| %>
    <p><%= shelter.with_pending_applications %></p>
  <% end %>
